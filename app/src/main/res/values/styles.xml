<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/offWhite</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BigBrightText">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InvalidDataError">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TotalExpenseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name= "AppNameText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TabAppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

</resources>
