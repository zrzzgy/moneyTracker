<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upper_tab_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_gravity="top">

    <android.support.design.widget.TabLayout
        android:id="@+id/upper_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorSecondary">

        <android.support.design.widget.TabItem
            android:id="@+id/category_expense_detail_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_tile_daily" />

        <android.support.design.widget.TabItem
            android:id="@+id/daily_expense_detail_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_title_category" />

    </android.support.design.widget.TabLayout>
</LinearLayout>